<div class="modal fade" id="sendMailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <%= form_tag(backoffice_send_mail_index_path) do %>
            <label for="recipient-name" class="col-form-label"> <%= t('labels.recipient') %> </label>
            <input type="text" disabled="disabled" class="form-control" id="recipient-text">
          </div>
          <div class="form-group">
            <label for="subject-name" class="col-form-label"> <%= t('labels.subject') %> </label>
            <input type="text" class="form-control" id="subject-text">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>